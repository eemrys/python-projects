pipeline {
    agent any

    environment {
      PATH="/Users/emrys/anaconda3/bin:$PATH"
    }

    stages {

        stage ("Code pull"){
            steps{
                checkout scm
            }
        }
        stage('Build environment') {
            steps {
                sh '''conda create --yes -n ${BUILD_TAG} python
                      source activate ${BUILD_TAG} 
                      pip install -r requirements.txt
                    '''
            }
        }
        stage('Test environment') {
            steps {
                sh '''source activate ${BUILD_TAG} 
                      pip list
                      which pip
                      which python
                    '''
            }
        }
	stage('Pytests') {
            steps {
                sh  ''' source activate ${BUILD_TAG}
                        pytest --suppress-tests-failed-exit-code --html=report.html
			open report.html
                    '''
            }           
        }
    }
    post {
        always {
            sh 'conda remove --yes -n ${BUILD_TAG} --all'
        }
        failure {
            echo "Failed"
        }
    }
}